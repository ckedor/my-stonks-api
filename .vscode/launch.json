{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI (uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host", "127.0.0.1",
        "--port", "7000",
        "--reload"
      ],
      "jinja": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "preLaunchTask": "Start Dependencies"
    },
    {
      "name": "Run Celery Worker (terminal separado)",
      "type": "python",
      "request": "launch",
      "module": "celery",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "-A", "app.worker.celery_app",
        "worker", 
        "-l", "info", "--pool=solo"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false,
      "preLaunchTask": "Start Dependencies"
    }
  ]
}